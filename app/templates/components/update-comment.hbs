{{#if updateCommentForm}}
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" placeholder=comment.name}}
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          {{input value=email id="email" placeholder=comment.email}}
        </div>

        <div class="form-group">
          <label for="text">Text</label>
          {{input value=text id="text" placeholder=comment.text}}
        </div>

        <button {{action 'update' comment}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateCommentForm'}}>Update</button>
{{/if}}
