<h1>Update Post</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="category">Category</label>
          {{input value=category id="category"}}
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          {{input value=image id="image"}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{summer-note height=contentHeight btnSize=bs-sm content=postContent focus=false header="Example" disabled=editingDisabled value=content id="content"}}
        </div>

        <button {{action 'update' post}}>Update</button>
      </form>
    </div>
